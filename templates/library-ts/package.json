{
  "license": "MIT",
	"type": "module",
  "version": "0.0.0",
  "name": "{NAME}",
  "description": "{DESCRIPTION}",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/*.cjs",
    "dist/*.mjs",
    "dist/*.map",
    "dist/*.ts"
  ],
  "repository": {
    "type": "git",
    "url": "{URL}",
    "directory": "src"
  },
  "keywords": [
    "typescript"
  ],
  "bugs": {
    "url": "{URL}/issues"
  },
  "homepage": "{URL}",
  "scripts": {
    "fix:format": "prettier --write \"**/*.{json,mjs,cjs,js,ts}\"",
    "fix:lint": "eslint --fix --ext .json,.mjs,.cjs,.js,.ts .",
    "fix": "pnpm fix:lint && pnpm fix:format",
    "check:format": "prettier --check \"**/*.{json,mjs,cjs,js,ts}\"",
    "check:lint": "eslint --ext .json,.mjs,.cjs,.js,.ts .",
    "check": "pnpm check:lint && pnpm check:format",
    "husky:pre-commit": "pnpm check",
    "husky:pre-push": "pnpm check",
    "test:coverage": "vitest run --coverage",
    "test": "vitest",
    "build": "pnpm clean && ts-node scripts/build.ts && tsc --emitDeclarationOnly --outDir dist",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build",
    "release": "release-it"
  },
  "devDependencies": {
    "@release-it/keep-a-changelog": "3.1.0",
    "@types/node": "18.13.0",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.60.0",
    "@vitest/coverage-c8": "0.30.1",
    "esbuild": "0.18.6",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "husky": "8.0.3",
    "prettier": "2.8.8",
    "release-it": "15.11.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.3",
    "vitest": "0.32.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
